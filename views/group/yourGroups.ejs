<div class="yourGroups">
    <table class="groups">
        <tr><th><h4>Your Groups</h4></th></tr>
        <tr><th><a class="button" href="/group/new">New group</a></th></tr>
        <%let count = 0; groups.forEach(group => { if(group.members.includes(user)) { count++; %>
              <tr class="pad">
                <td ><a class="button2" href="/group/<%=group.id%>"><%=group.name%></td>
              </tr>  
        <%}})%>
        <%if(count == 0){%>
          <tr><td><h2>You Are not a member of any group</h2></td></tr>
