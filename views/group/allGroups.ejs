<%- include('../partials/header.ejs')%>
<div class="yourGroups">
    <table class="groups">
        <tr><th><h4>All UNCC Groups</h4></th></tr>
        <%groups.forEach(group => { %>
            <tr>
                <td><a class="button2" href="/group/<%=group.id%>"><%=group.name%></td>
            </tr>
        <%})%>
    </table>
</div>
<%- include('../partials/footer.ejs')%>


<style>
    .groups{
        display: flex;
        justify-content: center;
        background-color: white;
        padding-bottom: 15%;
    }
    .groups td{
        float: left;
    }
    .yourGroups{
        background-color: #2ea44f;
        padding-right: 10%;
        padding-left: 10%;
        padding-top: 5%;
        padding-bottom: 5%;
    }
    .yourGroups th{
        text-align: center;
        font-size: 48px;
    }
    .button2{
    appearance: none;
  background-color: #46ff7a;
  border: 1px solid rgba(27, 31, 35, .15);
  border-radius: 6px;
  box-shadow: rgba(27, 31, 35, .1) 0 1px 0;
  box-sizing: border-box;
  color: #fff;
  cursor: pointer;
  display: inline-block;
    background-color: #2ea44f;
    text-decoration: none;
    justify-content: left;
    width: 900px;
    text-align: left;
    padding-top: 2%;
    padding-bottom: 2%;
    padding-left: 2%;
}
.button2:focus:not(:focus-visible):not(.focus-visible) {
  box-shadow: none;
  outline: none;
}

.button2:hover {
  background-color: #2c974b;
}

.button2:focus {
  box-shadow: rgba(46, 164, 79, .4) 0 0 0 3px;
  outline: none;
}

.button2:disabled {
  background-color: #94d3a2;
  border-color: rgba(27, 31, 35, .1);
  color: rgba(255, 255, 255, .8);
  cursor: default;
}

.button2:active {
  background-color: #298e46;
  box-shadow: rgba(20, 70, 32, .2) 0 1px 0 inset;
}
</style>
